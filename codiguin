// REACT //

import React, { useState } from 'react';
// import './Form.css'; // Certifique-se de que o arquivo CSS está sendo importado corretamente
 
const Form = () => {
  const [formData, setFormData] = useState({
    id: '',
    nome: '',
    idade: '',
    email: ''
  });
 
  const handleChange = (e) => {
    const { name, value } = e.target;
    setFormData(prevState => ({
      ...prevState,
      [name]: value
    }));
  };
 
  const handleSubmit = (e) => {
    e.preventDefault();
    // Aqui você pode adicionar lógica para enviar os dados para onde precisar
    console.log(formData);
 
    // Exibir alerta
    alert('Dados enviados com sucesso!');
 
    // Limpar os dados do formulário
    setFormData({
      id: '',
      nome: '',
      idade: '',
      email: ''
    });
  };
 
  return (
    <form className="form" onSubmit={handleSubmit}>
      <input className='input1'
        type="text"
        name="id"
        placeholder="ID"
        value={formData.id}
        onChange={handleChange}
      />
      <input className='input1'
        type="text"
        name="nome"
        placeholder="Nome"
        value={formData.nome}
        onChange={handleChange}
      />
      <input className='input1'
        type="text"
        name="idade"
        placeholder="Idade"
        value={formData.idade}
        onChange={handleChange}
      />
      <input className='input1'
        type="email"
        name="email"
        placeholder="Email"
        value={formData.email}
        onChange={handleChange}
      />
      <button className='botao1' type="submit">Enviar</button>
    </form>
  );
};
 
export default Form;





